    .header .header-con .header-info {
      width: 80%;
      height: 100%;
      float: right; }
      .header .header-con .header-info view {
        width: 100%;
        height: 60rpx;
        line-height: 60rpx;
        font-size: 32rpx;
        color: #333; }
        .header .header-con .header-info view image {
          width: 80rpx;
          height: 28rpx;
          margin-left: 20rpx; }
      .header .header-con .header-info .header-info-work, .header .header-con .header-info .header-info-company {
        font-size: 24rpx; }
      .header .header-con .header-info .header-info-work {
        color: #999; }
      .header .header-con .header-info .header-info-company {
        color: #666; }
    .header .header-con .header-title {
      height: 96rpx;
      width: 100%;
      float: left; }
      .header .header-con .header-title scroll-view {
        display: flex;
