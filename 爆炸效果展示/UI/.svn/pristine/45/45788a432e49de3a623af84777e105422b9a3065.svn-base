/*针对不同屏幕分辨率*/

@media screen and ( min-width: 412px ){
	.getRedPack .btn img {
         width: 25rem;
     }
	.prizeTip img {
	    width: 100%;
	    height: 22rem;
     }
     
     .getScoreRules ul {
	    line-height: 2.8rem;
	    font-size: 1.6rem;
      }
      .stationRecommand {
		    top: 20rem;
	  }
	  .myProfitCon ul li {
		    margin-right: 16%;
       }
       .getScoreRules {
		    top: 6rem;
		}
		.layerClose{		
	    bottom: -1rem;
	    }
	    .layerShutDown{	
	       bottom: 6rem;
	    }
	    
}
@media only screen and ( min-device-width: 411px )and (max-device-width:413px){
   #layerBody .routesBg {
		    width: 90vw;
		    height: 64vh;
		}
}
/*调试iphone6s*/
@media only screen and ( min-device-width: 375px )and (max-device-width:412px){
    #layerBody {
    top: 10%;
    }
    .getScoreRules {
	  top: 5.5rem;
	}
	.stationRecommand {
	    top: 18rem;
   }
    .layerClose{		
	    bottom: -1rem;
    }
    .layerShutDown{	
	    bottom: 7rem;
	 }
	 .myProfitCon ul li {
		margin-right: 12%;
     }
}
@media screen and ( max-width: 322px ){
	#layerBody {
    top: 10%;
    }
	.getRedPack .btn {
	    display: block;
	    margin-top: 1rem;
    }
	.getRedPack .btn img {
       width: 20rem;
    }
	.prizeTip img {
	    width: 100%;
	    height: 23rem;
    }
   .prizeTip .rules h3 {
	    text-align: center;
	    font-size: 1.5rem;
    }
    .rules h3 span {
	    display: inline-block;
	    border-right: 3rem solid #666;
	    border-left: 3rem solid #666;
	    line-height: 1px;
	    padding: 0 1rem;
    }
    .rules ul {
	    line-height: 2rem;
	    padding: 0 2rem;
	    font-size: 12px;
    }
    .myProfitCon ul {
        width: 90%;
    }
    .myProfitCon ul li {
        margin-right: 14%;
    }
    .myProfitCon ul li img {
         width: 6rem;
     }
     .myProfitCon ul li span {
         line-height: 2.5rem;
     }
     .bgHeight {
          height: 13rem;
     }
     .table {
          font-size: 1rem;
     }
     .getScoreRules {
	    top: 5rem;
	   }
	   .getScoreRules h3{
	    font-size:1.6rem;
	}
	   .getScoreRules ul {
		    line-height: 1.8rem;
		}
		.stationRecommand {
		    top: 13rem;
	  }
		.stationRecommand ul {
		    font-size: 1.5rem;
		}
}