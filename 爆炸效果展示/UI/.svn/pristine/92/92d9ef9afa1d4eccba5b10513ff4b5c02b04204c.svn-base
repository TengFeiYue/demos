		<script> 
		window.onload=function(){
			new Vue({
				el:'#app',
				data:{
					appId:"",
					timestamp:"",
					nonceStr:"",
					signature:"",
					fromSys:'',
		            showToward:true
				},
				beforeMount(){
					this.getData();
				},
				mounted:function(){
		 			var _this=this;
		 			 this.$nextTick(function () { 
		 			 	_this.fromSys=getQueryString('fromSys');
		 			 	console.log(_this.fromSys)
						_this.isShare();          			   	 	
				   	 })
		 		},
				methods:{
					isShare(){						
							if(this.fromSys=='app'){
								this.showToward=false;								
							}else{
								document.body.style.paddingBottom='0px';
							}
					},
					getData:function(){
						var _this=this;
						var signatureUrl = location.href.split('#')[0];
						//alert(signatureUrl);
						this.$http.post(urlPort+'/wechat/ticket',{url:signatureUrl}).then(function(response){ 	
							var body = response.body.body;
							//alert(body.signature);
							//alert(body.url);
							wx.config({
									debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
									appId: body.appid, // 必填，公众号的唯一标识
									timestamp: body.timestamp, // 必填，生成签名的时间戳
									nonceStr: body.nonceStr, // 必填，生成签名的随机串
									signature: body.signature,// 必填，签名，见附录1
									jsApiList: ['onMenuShareTimeline','onMenuShareAppMessage'] // 必填，需要使用的JS接口列表，所有JS接口列表见附录2
								});	 
								wx.ready(function(){
									wx.onMenuShareTimeline({
										title: '厦门科艾斯-汽车内饰塑料低气味优化方案',
										link: body.url,
										imgUrl: 'http://h5.antsoo.com/app/appIcon.png',
										trigger: function (res) {
										  // 不要尝试在trigger中使用ajax异步请求修改本次分享的内容，因为客户端分享操作是一个同步操作，这时候使用ajax的回包会还没有返回
										  // alert('用户点击分享到朋友圈');
										},
										success: function (res) {
										  alert('已分享');
										},
										cancel: function (res) {
										  // alert('已取消');
										},
										fail: function (res) {
										  // alert(JSON.stringify(res));
										}
									  });
									  wx.onMenuShareAppMessage({  
										title: '厦门科艾斯-汽车内饰塑料低气味优化方案', // 分享标题  
										desc: '相容剂，增韧剂，功能性助剂', // 分享描述  
										link: body.url, // 分享链接  
										imgUrl: 'http://h5.antsoo.com/app/appIcon.png', // 分享图标  
										type: '', // 分享类型,music、video或link，不填默认为link  
										dataUrl: '', // 如果type是music或video，则要提供数据链接，默认为空  
										success: function () {   
											// 用户确认分享后执行的回调函数  
										},  
										cancel: function () {   
											// 用户取消分享后执行的回调函数  
										}  
									});
								});  
						})
					}
					
				}
			})
			}		
    </script>
