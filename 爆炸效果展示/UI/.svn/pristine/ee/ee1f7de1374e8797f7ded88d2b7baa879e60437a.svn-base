.con {
  width: 100%;
  background-color: #0092ff;
  padding: 0 100rpx;
  box-sizing: border-box; }
  .con .first-title {
    width: 100%;
    color: #fff;
    font-size: 38rpx;
    line-height: 3;
    text-align: center; }
  .con .second-title {
    width: 100%;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    position: relative; }
    .con .second-title image {
      width: 100%;
      height: 2rpx; }
    .con .second-title text {
      width: 300rpx;
