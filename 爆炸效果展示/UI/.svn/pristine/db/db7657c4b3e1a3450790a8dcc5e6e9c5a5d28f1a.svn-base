	<!--联系人弹框-->
	<view class="modal-mask" wx:if="{{showModal}}" catchtouchmove="preventTouchMove" bindtap="hideModal"></view>
	<view class="modal-dialog" wx:if="{{showModal}}" animation="{{animationData}}">
