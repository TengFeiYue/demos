  		<scroll-view scroll-y="true" class="user-box">
  			<navigator class="modal-user" wx:for="{{contacts}}" wx:key="{{index}}" hover-class="none" url="connectionDetail?memberId={{item.id}}&phone={{item.phoneNo}}">
