<style>
	.searchTabs {
		display: flex;
		flex-direction: row;
		justify-content: between;
		align-items: center;
		background: #0092FF;
		box-shadow: 0 1px 4px 0 rgba(153, 153, 153, 0.60);
		border-radius: 16rpx 16rpx 0 0;
		color: #ffffff;
	}

	.searchTabsAct {
		display: flex;
		flex-direction: row;
		justify-content: between;
		align-items: center;
		background: #ffffff;
		box-shadow: 0 1px 4px 0 rgba(153, 153, 153, 0.60);
		border-radius: 16rpx 16rpx 0 0;
		color: #0092FF;
	}

	.searchTabs .tabCom {
		flex: 8;
		text-align: center;
		position: relative;
		height: 88rpx;
		color: #0092FF;
	}

	.searchTabsAct .tabCom {
		flex: 8;
		text-align: center;
		position: relative;
		height: 88rpx;
		color: #ffffff;
	}

	.tabCom image {
		width: 100%;
		height: 100%;
	}

	.tabCom .tabComTxt {
		display: inline-block;
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		left: 0;
		text-align: center;
		line-height: 88rpx;
	}

	.tabCon {
		flex: 7;
		text-align: center;
		height: 88rpx;
		line-height: 88rpx;
		border-radius: 0 16rpx 0 0;
		position: relative;
	}

	.tabCon .bottomLine,
	.tabCom .bottomLine {
		background: #ffffff;
		display: inline-block;
		width: 140rpx;
		height: 4rpx;
		position: absolute;
		bottom: 0;
		left: 50%;
		z-index: 100;
		margin-left: -70rpx;
	}

	.searchSelects {
		padding-top: 20rpx;
	}

	.query {
		background: #F9F9F9;
		border: 1px solid #0092FF;
		border-radius: 16rpx;
		width: 95%;
		height: 72rpx;
		display: flex;
		flex-direction: row;
		justify-content: between;
		align-items: center;
		margin: 0 auto;
		margin-top: 20rpx;
	}

	.query image {
		width: 28rpx;
		height: 28rpx;
		margin-top: 25rpx;
	}

	.query .icon {
		flex: 1;
		text-align: center;
		height: 100%;
	}

	.query .searchIpt {
		flex: 8;
	}

	.select_com {
		display: inline-block;
		width: 190rpx;
		height: 64rpx;
		text-align: center;
		line-height: 64rpx;
		margin-left: 25rpx;
		margin-top: 20rpx;
		border: 1rpx solid #ECECEC;
		border-radius: 8rpx;
		font-size: 24rpx;
		color: #666666;
		font-weight: 100;
	}

	.cityBox {
		position: absolute;
		z-index: 3;
	}

	.thisCity {
		width: 92rpx;
		height: 45rpx;
		position: absolute;
	}

	._city {
		display: block;
		position: relative;
		margin-left: 30rpx;
		width: 65rpx;
		height: 45rpx;
		line-height: 45rpx;
		font-size: 20rpx;
		overflow: hidden;
		white-space: nowrap;
		text-overflow: ellipsis;
	}

	::-webkit-scrollbar {
		width: 0;
		height: 0;
		color: transparent;
	}
</style>
<template>
	<view class="searchTabs{{tabComAct?'':'Act'}}">
		<navigator class='cityBox' hover-class="none" url="../pages/cityposition">
			<image class='thisCity' src="../../resources/img/{{tabComAct?'city':'cityWhite'}}.png"></image>
			<text class='_city'>{{seleCity}}</text>
		</navigator>
		<view class="tabCom" bindtap="changers" data-current="0">
			<text class="tabComTxt" data-current="0">找企业</text>
			<image src="../../resources/img/{{tabComAct?'whiteBg':'blueBg'}}.png"></image>
			<text class="bottomLine"></text>
		</view>
		<view class="tabCon" data-current="1" bindtap="changers">
			<text class="" data-current="1">找人脉</text>
			<text class="bottomLine"></text>
		</view>
	</view>
	<!--搜企业-->
	<view style="height: 280rpx;" wx:if="{{viewShow}}">
		<view class="query" bindtap="toSearchCom">
			<view class="icon">
				<image src="../../resources/icons/search.png" wx:if="{{show_hide}}"></image>
			</view>
			<view class="searchIpt">
				<input type="text" value='' placeholder="搜索企业名称" disabled="true" />
			</view>
		</view>
		<scroll-view scroll-y="true" style='height:180rpx;'>
        <view class='select_com' wx:for="{{testCom}}" wx:key="{{index}}" data-industryrole="{{item.industryRole}}"  data-findex="{{index}}" bindtap="gotoEnterprise">{{item.industryRole}}{{item.enpCount}}+</view>
</scroll-view>
	</view>
	<!--搜人脉-->
	<view style="height: 280rpx;" wx:if="{{tabComAct}}">
		<view class="query" bindtap="toSearchPer">
			<view class="icon">
				<image src="../../resources/icons/search.png" wx:if="{{show_hide}}"></image>
			</view>
			<view class="searchIpt">
				<input type="text" value='' placeholder="搜索可靠人脉" disabled="true" />
			</view>
		</view>
		<scroll-view scroll-y="true" style='height:180rpx;'>
 <view class='select_com' wx:for="{{testPer}}" wx:key="{{index}}" data-i="{{index}}" data-key="{{item.value}}" bindtap="gotoRelations">{{item.value}}{{item.count}}+</view>
</scroll-view>

	</view>
</template>
<script>
	import wepy from 'wepy'
	import { api } from '../config'
	import location from '../utils/location'
	export default class search extends wepy.component {
		data = {
			viewShow: true,
			tabComAct: false,
			searchvalue: "",
			show_hide: true,
			testCom: [],
			testPer: [],
			seleCity: '',
			formPage: "",
			long: -1,
			lat: -1
		}
		events = {
			'selectCity': function(arg) {
				console.log(arg)
				this.seleCity = arg;
				// this.fromPage = arg.formP;
				wx.setStorageSync('getSeleCity', this.seleCity);
				this.fetchProductionStatisticData();
				this.fetchRelationsStatisticData();
			},
		}
		methods = {
			gotoEnterprise(e){
					this.$emit('gotoEnterprise',{
						industryRole:e.currentTarget.dataset.industryrole,
						findex:e.currentTarget.dataset.findex
					});
			},
			gotoRelations(e){
					this.$emit('gotoRelations',{
						industryRole:e.currentTarget.dataset.key,
						roleIndex:e.currentTarget.dataset.i,
					});
			},
			toSearchCom() {
				wx.navigateTo({
					url: 'searchCom?long=' + this.long + '&lat=' + this.lat
				})
			},
			toSearchPer() {
				wx.navigateTo({
					url: 'searchPer'
				})
			},
			chooseCity() {
				wx.navigateTo({
					url: 'cityposition'
				})
			},
			//选项卡切换
			changers(e) {
				if(this.data.newlife === e.target.dataset.current) {
					return false;
				} else {
					this.newlife = e.target.dataset.current
					if(this.newlife == 0) {
						this.tabComAct = false;
						this.viewShow = true;
					} else {
						this.tabComAct = true;
						this.viewShow = false;
					}
				}
			},
		}

		onLoad() {
				var that = this;
				location.getLocation().then(function(res){
						console.log(res);
						that.seleCity = res.city;
						that.fetchProductionStatisticData();
						that.fetchRelationsStatisticData();
						that.$apply();
				})
		}

		onShow() {

		}
		fetchProductionStatisticData() { //获取产业链角色统计
			let that = this;
			wepy.request({
				url: api.index.productionStatistic.url,
				method: api.index.productionStatistic.method,
				data: {
					cityName: that.seleCity
				},
				success: function(res) {
					that.testCom = res.data.body;
					that.$apply();
				}
			});
		}
		fetchRelationsStatisticData() { //获取人脉统计
			let that = this;
			wepy.request({
				url: api.index.relationsStatistic.url,
				method: api.index.relationsStatistic.method,
				data: {
					cityName: that.seleCity
				},
				success: function(res) {
					that.testPer = res.data.body;
					that.$apply();
				}
			});
		}


	}
</script>
