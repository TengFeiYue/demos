.tab {
  background: #fafafa;
  box-shadow: inset 0 0 0 0 rgba(0, 0, 0, 0.25);
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  height: 9vh;
  width: 100%;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #4F4F4F;
  letter-spacing: 0.12px;
  white-space: nowrap;
  display: flex; }
  .tab .tab_item {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 33.3333%;
    flex: 1; }
    .tab .tab_item.active {
      color: #0092FF; }
  .tab .icon {
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin: auto; }
  .tab .title {
    padding-top: 0rpx;
    display: block; }
