@charset "UTF-8";
page {
  background-color: #F2F2F2; }

.content-box {
  margin-top: 20rpx;
  overflow: hidden; }

.control-fa {
  height: 86rpx;
  line-height: 86rpx;
  position: relative;
  z-index: 2;
  background-color: white;
  font-size: 32rpx;
  font-weight: 600;
  color: #000000; }

.control-fa-show {
  color: #0092FF;
  border-bottom: 1rpx solid #ECECEC; }

.control-icon {
  width: 10rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-top: 25rpx; }

.control-title {
  margin-left: 30rpx; }

.control-dis-left {
  display: block;
  float: left; }

.control-dis-right {
  display: block;
  width: 30rpx;
  float: right;
  margin-right: 30rpx;
  font-size: 40rpx;
  color: #0092FF; }

.dis-right-false {
  height: 4rpx;
  margin-top: 44rpx; }

.dis-right-true {
  height: 30rpx;
  margin-top: 28rpx; }

.showis {
  height: 0;
  background-color: white;
  opacity: 0;
  font-size: 28rpx;
  transform: translateY(-50%);
  transition: .3s;
  overflow: hidden;
  /*工商信息*/
  /*股东信息*/ }
  .showis .tab-content {
    width: 95%;
    line-height: 86rpx;
    margin-left: 5%;
    border-bottom: 1rpx solid #ECECEC; }
    .showis .tab-content:not(:nth-child(7)) {
      height: 86rpx; }
    .showis .tab-content .con-bk {
      display: block;
      float: left;
      font-size: 26rpx;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis; }
    .showis .tab-content .content-left {
      width: 33%;
      color: #4A4A4A; }
    .showis .tab-content .content-right {
      width: 67%;
      color: #999999; }
    .showis .tab-content .tb-bk {
      display: block;
      width: 97%;
      line-height: 60rpx;
      font-size: 26rpx; }
      .showis .tab-content .tb-bk:first-child {
        color: #4A4A4A; }
      .showis .tab-content .tb-bk:last-child {
        color: #999999; }
  .showis .shareholder {
    width: 100%;
    height: 86rpx;
    line-height: 86rpx;
    padding: 0 0 0 25rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    border-bottom: 1rpx solid #ECECEC; }
  .showis .share-count {
    width: 100%;
    height: 200rpx;
    margin: 0 auto;
    border-bottom: 1rpx solid #ECECEC;
    padding-left: 30rpx; }
    .showis .share-count .count-msg {
      width: 45%;
      float: left; }
      .showis .share-count .count-msg .msg-childone {
        margin-top: 16rpx;
        color: #4A4A4A; }
      .showis .share-count .count-msg .msg-childtwo {
        margin-top: 6rpx;
        color: #999999;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis; }

.showis-show {
  height: auto;
  opacity: 1;
  transform: translateY(0); }
