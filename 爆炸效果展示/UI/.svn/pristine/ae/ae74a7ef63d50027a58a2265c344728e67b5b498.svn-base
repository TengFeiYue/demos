@import "./../../queryPage/recirculatMaterial.wxss";
@import "./../../queryPage/accessories.wxss";
@import "./../../queryPage/betterMaterial.wxss";
@import "./../../queryPage/material.wxss";
@import "./../../index/search.wxss";
.indexPage {
  background-color: white; }

.filter-flex {
  width: 100%; }

.filter-tab {
  display: flex;
  width: 100%;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ddd;
  position: relative;
  z-index: 2;
  background: #fff;
  font-size: 26rpx; }

.filter-tab text {
  flex: 1;
  text-align: center; }

.filter-tab text:after {
  content: '';
  display: inline-block;
  vertical-align: 4rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #bbb;
  margin-left: 33rpx; }

.filter-tab text.active {
  color: #0386ff; }

.filter-tab:not(.sort-tab) text.active:after {
  border-top: 0;
  border-bottom: 12rpx solid #0386ff; }

.filter-tab.sort-tab text.active:after {
  border-top: 12rpx solid #3399FF; }

.filter-panel {
  display: flex;
  background: #ffffff;
  position: absolute;
  width: 100%;
  z-index: 13;
  overflow: hidden;
  font-size: 13px; }

.filter-panel-left, .filter-panel-right {
  flex: 1;
  line-height: 80rpx;
  text-align: center;
  overflow-y: auto; }

.filter-panel-left .active {
  background: #fff;
  color: #0386ff; }

.filter-panel-left view {
  border-bottom: 1px solid #eeeeee; }

.filter-panel-right .active {
  color: #0386ff; }

.filter-panel-right {
  background: #fff; }

.filter-panel-right:empty {
  display: none; }

.filter-shadow {
  position: absolute;
  width: 100%;
  top: 100px;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.5); }

.price_rep {
  position: fixed;
  bottom: 98rpx;
  right: 5rpx;
  z-index: 111111; }

.price_rep .img {
  width: 128rpx;
  height: 128rpx; }
