#city {
    position: relative;
}
.letter-aside {
    position: absolute;
    right: 0;
    top: 2.5rem;
    width: 1.5rem;
    z-index: 2;
}
.letter-aside ul{
    background: #e4e4e4;
    width:1rem;
    margin:0 auto;
    border-radius: 10px;
    padding:.5rem 0;
}
.letter-aside li{
    list-style: none;
    line-height: 1rem;
    font-size: .55rem;
    color: #333;
    text-align: center;
}

#tip {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    border: 1px solid #ccc;
    width: 4rem;
    height: 4rem;
    z-index: 10;
    text-align: center;
    line-height: 4rem;
    font-size: 2.5rem;
    opacity: 0;
    color: #333;
    z-index: 1;
    -webkit-transition: .2s;
}
.tipAppear {
    animation: appearTip 1 linear 0.5s;
}

@keyframes appearTip {
    0% {
        opacity: 1;
    }
    80% {
        opacity: 0.5;
    }
    100% {
        opacity: 0;
    }
}

.search-city {
    position: relative;
    width:100%;
    text-align: center;
    background-color:white;
    box-sizing: border-box;
    padding:.35rem .6rem;
    z-index:15;
    -webkit-overflow-scrolling: touch;
}
.search-city:after{
    position: absolute;
    width:.65rem;
    height:.65rem;
    background: url(//images.51nbapi.com/images/20180112_credit_bill/ic_search.png) no-repeat;
    background-size: cover;
    content:'';
    left:.95rem;
    top:0;
    bottom:0;
    margin:auto;
}
.search-city input{
    display: block;
    height:1.5rem;
    width:100%;
    text-indent:1.25rem;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-user-select: text;
    background-color: #f0f2f5;
    border:0;
    font-size: .65rem;
}
.letter-item{
    -webkit-overflow-scrolling: touch;
}
.letter-line{
    background: #f0f2f5;
    height:1.25rem;
    font-size: .7rem;
    padding-left:.8rem;
}
.letter-line a{
    line-height:1.25rem;
}
.list{
    position: relative;
    overflow-y: auto;
    z-index:1;
}
.list-item{
    position: relative;
    padding:.55rem .85rem;
    display: flex;
    background: #fff;
}
.list-item:before{
    position: absolute;
    left:.8rem;
    right:0;
    height:1px;
    background: rgba(0,0,0,.08);
    content: '';
    bottom:0
}
.list-item:active{
    background: #f5f5f5;
}
.list-item img{
    width:1.4rem;
    height:1.4rem;
    margin-right:.55rem;
}
.list-item p{
    flex:1;
    color: #030303;
    font-size: .75rem;
    line-height:1.4rem;
}
.list-item button{
    display: block;
    width: 3.6rem;
    border: 1px solid rgba(56,132,255,.8);
    color: #3884ff;
    font-size: .7rem;
    height: 1.3rem;
    margin-right: .7rem;
    background: transparent;
    border-radius: .2rem;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.tipShow {
    text-align: center;
    line-height: 60px;
    font-size: 16px;
    color: #bbbbbb;
}
.tips-text{
    font-size: .6rem;
    color: #999;
    text-align: center;
    padding-top:.7rem;
}
#showResultContent{
    position: relative;
}
#showResultContent:after{
    position: absolute;
    left:0;
    right:0;
    height:1px;
    background-color: rgba(0,0,0,.08);
    content:'';
    top:1px;
}
