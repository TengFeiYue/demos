@charset "UTF-8";
@font-face {
	font-family: "icons";
	src: url("../font/icons.eot");
	/* IE9*/
	src: url("../font/icons.eot?#iefix") format("embedded-opentype"), 
		url("../font/icons.woff") format("woff"), 
		url("../font/icons.ttf") format("truetype"), 
		url("../font/icons.svg#iconfont") format("svg");
	/* iOS 4.1- */
}

body,
div,
ul,
ol,
li,
p,
dl,
dt,
dd,
h1,
h2,
h3,
h4,
button {
	margin: 0;
	padding: 0;
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
	outline: 0;
}

.yahei,
body,
input,
select,
textarea {
	font-family: 'microsoft yahei';
}

html,
body {
	height: 100%;
}

body {
	background: #E8EAEC;
	margin: 0 auto;
	color: #333;
}

input,
select,
textarea {
	appearance: none;
	-webkit-appearance: none;
	border: 0;
	outline: 0;
	color: #333;
	padding: 0;
	margin: 0;
}

input::-webkit-input-placeholder {
	color: #ccc;
}

ul,
ol,
li {
	list-style: none;
	list-style-type: none;
}

em,
i {
	font-style: normal;
}

a {
	text-decoration: none;
	color: #333;
}

.footer {
	height: 2.75rem;
	position: fixed;
	bottom: 0;
	background: #fff;
}

.footer ul {
	padding-top: 0.15625rem;
	height: 2.59375rem;
	font-size: 0.5625rem;
	border-top: 2px #dcdcdc solid;
}

.footer li {
	float: left;
	width: 50%;
	overflow: hidden;
	text-align: center;
}

.footer li:before {
	display: block;
	font-family: 'icons';
	line-height: 1.5625rem;
	font-size: 1.4375rem;
	color: #777;
}

.footer li.home:before {
	content: "";
}

.footer li.user:before {
	content: "";
}

.footer li.on,
.footer li.on:before {
	color: #3297fd;
}

