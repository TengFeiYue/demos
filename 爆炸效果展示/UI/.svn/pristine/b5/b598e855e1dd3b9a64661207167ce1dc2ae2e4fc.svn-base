.next {
  width: 100%;
  height: 360rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.next .next-title {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #4a4a4a;
}
.next .next-list {
  padding-right: 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ececec;
  width: 100%;
  height: 90rpx;
  overflow: hidden;
}
.next .next-list .next-name,
.next .next-list .next-to,
.next .next-list .next-distance,
.next .next-list .next-label {
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
}
.next .next-list .next-to,
.next .next-list .next-distance,
.next .next-list .next-label {
  float: right;
  margin-left: 10rpx;
}
.next .next-list .next-name {
  font-size: 28rpx;
  color: #333;
  float: left;
}
.next .next-list .next-to image {
  width: 18rpx;
  height: 28rpx;
}
.next .next-list .next-distance {
  font-size: 20rpx;
  color: #666;
}
.next .next-list .next-label {
  height: 34rpx;
  border: 2rpx solid #c2e6f7;
  border-radius: 8rpx;
  margin-top: 26rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 34rpx;
  padding: 0 10rpx;
}
.comD {
  display: flex;
  flex-direction: row;
  justify-content: between;
  align-items: center;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0.17px;
  padding: 22rpx 0 16rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #ECECEC;
}
.comD .selects {
  display: inline-block;
  flex: 1;
}
.comD .selects:after {
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid #999999;
  position: relative;
  top: -2rpx;
  right: -10rpx;
}
.comD .selectsAct {
  color: #0092FF;
  display: inline-block;
  flex: 1;
}
.comD .selectsAct:after {
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 12rpx solid #0092FF;
  position: relative;
  top: -2rpx;
  right: -10rpx;
}
.filter-shadow {
  position: absolute;
  width: 100%;
  top: 37%;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.5);
}
.filter-content {
  background: #ffffff;
  position: absolute;
  width: 100%;
  top: 37%;
  z-index: 100;
  font-size: 24rpx;
  color: #333333;
  letter-spacing: -0.14px;
  padding-top: 15rpx;
}
.filter-panel .item {
  padding: 0 30rpx;
  line-height: 70rpx;
  height: 70rpx;
  background: #f2f2f2;
  border-bottom: 1px solid #ececec;
}
.filter-panel .itemAct {
  padding: 0 30rpx;
  line-height: 70rpx;
  background: #ffffff;
  color: #0092FF;
  border-bottom: 1px solid #ececec;
}
.distanceItem {
  min-height: 360rpx;
  position: absolute;
  top: 0;
  right: 0;
  width: 40%;
  line-height: 70rpx;
  background: #ffffff;
}
.dItem {
  border-bottom: 1px solid #ececec;
  padding-left: 20rpx;
}
.dItemAct {
  border-bottom: 1px solid #ececec;
  padding-left: 20rpx;
  color: #0092FF;
}
.list {
  margin-top: 20rpx;
}
.scrollBody {
  height: 720rpx;
}
.scrollBody .ul {
  padding-left: 30rpx;
  box-sizing: border-box;
}
.scrollBody .ul .recommandList {
  padding-right: 30rpx;
  border-bottom: 2rpx solid #ececec;
  box-sizing: border-box;
}
.scrollBody .ul .recommandList .companyName {
  text-align: left;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0.17px;
}
.scrollBody .ul .recommandList .companyName image {
  width: 25.2rpx;
  height: 26.8rpx;
  position: relative;
  right: -14rpx;
}
.scrollBody .ul .recommandList .applies {
  overflow: hidden;
  margin: 5rpx 0;
}
.scrollBody .ul .recommandList .applies .types,
.scrollBody .ul .recommandList .applies .list-text {
  display: inline-block;
  float: left;
  margin-right: 20rpx;
  font-size: 22rpx;
}
.scrollBody .ul .recommandList .applies .types {
  height: 36rpx;
  width: 36rpx;
  line-height: 36rpx;
  text-align: center;
  color: #fff;
  background-color: #cce9ff;
  border-radius: 50%;
}
.scrollBody .ul .recommandList .applies .list-text {
  height: 40rpx;
  border: 2rpx solid #c2e6f7;
  line-height: 25rpx;
  color: #999;
  border-radius: 4rpx;
  padding: 6rpx 10rpx;
  box-sizing: border-box;
}
.scrollBody .ul .recommandList .otherDataService {
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: between;
  align-items: center;
}
.scrollBody .ul .recommandList .otherDataService .otherserve {
  flex: 1;
  text-align: left;
}
.scrollBody .ul .recommandList .otherDataService .distance {
  flex: 1;
  text-align: right;
}
.scrollBody .ul .recommandList .companySite {
  font-size: 20rpx;
  text-align: left;
  padding: 14rpx 0;
}
.tips {
  font-size: 28rpx;
  background: #ffffff;
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 10rpx;
}
.tips .loadShow {
  display: flex;
  background: #ffffff;
  text-align: center;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
}
.tips .loadShow icon {
  position: relative;
  top: 17rpx;
  right: 5rpx;
}
